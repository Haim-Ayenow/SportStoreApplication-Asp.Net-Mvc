@using SportStoreApplication.Models;
<link rel="stylesheet" href="~/Content/StyleSheet.css" />

<table style=" border: black 1px solid; ">
    <tr>
        <th>Id</th>
        <th>Type Of Clothes</th>
        <th>Gender</th>
        <th>Company</th>
        <th>Brand</th>
        <th>Price</th>
        <th>Amount</th>
        <th>IsShort</th>
        <th>IsDry-Fit</th>
        <th>Picture</th>
    </tr>
    @foreach (Clothe item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.TypeOfCloth</td>
            <td>@item.Gender</td>
            <td>@item.Company</td>
            <td>@item.Brand</td>
            <td>@item.Price</td>
            <td>@item.Amount</td>
            <td>@item.IsShort</td>
            <td>@item.IsDryFit</td>
            <td><img src="@item.Picture" style="width:50px;height:100px">
        </tr>
    }

</table>
